<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card"
            android:layout_margin="@dimen/card_default_margin"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/route_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_margin="@dimen/default_margin_medium"
                    android:textColor="@color/material_grey_900"
                    android:textSize="@dimen/route_title_text_size"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_route_height"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_regular_biking_96"/>

                <TextView
                        android:id="@+id/route_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:layout_weight="0.6"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/route_rating_text_size"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/default_margin_large"
                    android:layout_marginRight="@dimen/default_margin_large"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_route_height"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_star_96"/>

                <TextView
                        android:id="@+id/route_rating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:layout_weight="0.6"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/route_rating_text_size"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/route_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_grey_800"
                    android:layout_margin="@dimen/default_margin_medium"
                    android:textSize="@dimen/route_desc_text_size"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>