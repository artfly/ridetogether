<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card"
            android:layout_margin="@dimen/card_default_margin"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/route_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#3f51b5"
                    android:typeface="serif"
                    android:layout_margin="@dimen/default_margin_medium"
                    android:text="Awesome road"
                    android:textSize="@dimen/route_title_text_size"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/route_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6.7"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/route_rating_text_size"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:text="Distance (km)"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/route_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/route_rating_text_size"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:text="Rating"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/route_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin_medium"
                    android:textSize="@dimen/route_desc_text_size"
                    android:text="@string/lorem_ipsum"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>