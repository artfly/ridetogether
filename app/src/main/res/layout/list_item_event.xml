<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card"
            android:layout_margin="@dimen/card_default_margin"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:textSize="@dimen/event_date_text_size"/>
            <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/material_blue_grey_900"
                    android:layout_marginBottom="@dimen/default_margin_large"
                    android:textSize="@dimen/event_title_text_size"/>
            <TextView
                    android:id="@+id/event_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/event_desc_text_size"
                    android:layout_marginBottom="@dimen/default_margin_medium"/>
            <Button
                    android:id="@+id/button_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/event_subscribe_text_size"
                    android:textStyle="bold"
                    android:theme="@style/ButtonStyle"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    style="?android:attr/selectableItemBackground"
                    android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>